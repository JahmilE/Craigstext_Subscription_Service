<h1>Subscribers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Verified?</th>
    <th></th>
    <th></th>
    
  </tr>

  <% @subscribers.each do |subscriber| %>
    <tr class="subscriberlist">
      <td><%= subscriber.name %></td>
      <td><%= subscriber.phone %></td>
      <td><%= subscriber.email %></td>
      <td><%= subscriber.verified %></td>
      <td><%= link_to 'Show', subscriber_path(subscriber) %></td>
      <td><%= link_to 'Edit', edit_subscriber_path(subscriber) %></td>
      <td><%= link_to 'Destroy',subscriber_path(subscriber), {:method => 'delete', :data => {:confirm => 'Are you sure you want to delete? You\'ll lose any searches attached to this subscriber :('}} %></td>
    </tr>
  <% end %>

</table>





















